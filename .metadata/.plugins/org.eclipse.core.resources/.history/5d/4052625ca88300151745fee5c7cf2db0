import java.util.*;

public class OddOrEven {

	public static void main(String[] args) {
		
		oddOrEven();
		
	}
	
	static void oddOrEven() {
		
		String number;
		
		Scanner inputtedNum = new Scanner(System.in);
		try {
			System.out.println("What number would you like to test?");
			number = inputtedNum.nextLine();
		} finally {
			inputtedNum.close();
		}
		
		String lastNum = number.substring(0);
		System.out.println(lastNum);
		
	}
	
}
